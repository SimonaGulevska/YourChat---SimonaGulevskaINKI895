<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:padding="@dimen/default_padding"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_user"
            android:textSize="@dimen/text_default"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/back_btn"/>
        <ImageButton
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size"
            android:contentDescription="@string/back"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/default_padding"
        android:id="@+id/search_user_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_rounded_corner"
            android:layout_margin="@dimen/default_padding"
            android:hint="@string/username"
            android:padding="@dimen/default_padding"
            android:elevation="4dp"
            android:layout_toStartOf="@id/search_user_btn"
            android:id="@+id/seach_username_input"/>
        <ImageButton
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size"
            android:contentDescription="@string/search_hint"
            android:src="@drawable/icon_search"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/my_primary"
            android:padding="@dimen/default_padding_half"
            android:layout_margin="@dimen/default_padding"
            android:id="@+id/search_user_btn"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_user_layout"
        android:padding="@dimen/default_padding"
        android:id="@+id/search_user_recycler_view"/>
</RelativeLayout>