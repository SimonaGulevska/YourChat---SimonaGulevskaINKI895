<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:background="@color/my_primary"
        android:padding="@dimen/default_padding"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/profile_pic_layout"
            android:id="@+id/other_username"/>
        <!--        Include layout from created profile picture view-->
        <include layout="@layout/profile_pic_view"
            android:layout_width="@dimen/toolbar_size"
            android:layout_height="@dimen/toolbar_size"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_toEndOf="@id/back_btn"
            android:id="@+id/profile_pic_layout"/>

        <ImageButton
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size"
            android:contentDescription="@string/emptyString"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/back_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_button_size"
            android:contentDescription="@string/emptyString"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:padding="@dimen/no_padding"
            android:text="@string/load_drafts"
            android:id="@+id/load_drafts_btn"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_layout"
        android:background="@color/white"
        android:id="@+id/chat_recycler_view"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_layout"
        android:id="@+id/drafts_recycler_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_size"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/default_padding"
        android:id="@+id/bottom_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/default_padding"
            android:layout_toStartOf="@id/message_save_btn"
            android:background="@drawable/edit_text_rounded_corner"
            android:elevation="4dp"
            android:hint="@string/write_message_here"
            android:padding="@dimen/default_padding"
            android:id="@+id/chat_message_input"/>

        <ImageButton
            android:layout_width="@dimen/big_button_size"
            android:layout_height="@dimen/big_button_size"
            android:contentDescription="@string/emptyString"
            android:src="@drawable/save_icon"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/message_send_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/my_primary"
            android:id="@+id/message_save_btn"
            android:padding="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"/>

        <ImageButton
            android:layout_width="@dimen/big_button_size"
            android:layout_height="@dimen/big_button_size"
            android:contentDescription="@string/emptyString"
            android:src="@drawable/icon_send"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/my_primary"
            android:id="@+id/message_send_btn"
            android:padding="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"/>
    </RelativeLayout>

</RelativeLayout>